  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Math Battle Game</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin: 0;
      padding: 0;
      background-color: cyan; /* Background color set to cyan */
    }
    h1 {
      color: #333;
    }
    #game-board {
      margin: 20px auto;
      width: 400px;
      padding: 20px;
      border: 2px solid #ccc;
      border-radius: 10px;
      background-color: #fff;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    button {
      margin: 10px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
      background-color: #007bff;
      color: white;
      transition: background-color 0.3s;
    }
    button:hover {
      background-color: #0056b3;
    }
    .card {
      display: inline-block;
      margin: 5px;
      padding: 10px;
      border: 1px solid #333;
      border-radius: 5px;
      background-color: #e9ecef;
      cursor: pointer;
      font-size: 14px;
      min-width: 80px; /* Ensure consistent width */
      text-align: center;
    }
    .card:hover {
      background-color: #d4d4d4;
    }
    #cards-list {
      min-height: 200px; /* Reduced height to half (originally 400px) */
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 10px;
      background-color: #f9f9f9;
      margin-top: 10px;
      display: flex;
      flex-wrap: wrap; /* Allow cards to wrap to the next line */
      justify-content: flex-start; /* Align cards to the start */
      align-items: flex-start; /* Align cards vertically */
      gap: 10px; /* Add spacing between cards */
      overflow-y: auto; /* Enable scrolling if cards exceed the container height */
    }
    #message {
      margin-top: 10px;
      font-size: 16px;
      color: #333;
    }
    #current-turn {
      margin-top: 10px;
      font-size: 18px;
      font-weight: bold;
      color: #007bff;
    }
    #endgame-message {
      display: none;
      margin-top: 20px;
    }
    #next-turn-button {
      margin-top: 10px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
      background-color: #28a745;
      color: white;
      transition: background-color 0.3s;
    }
    #next-turn-button:hover {
      background-color: #218838;
    }
